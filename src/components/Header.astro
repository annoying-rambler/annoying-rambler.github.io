---
import HeaderLink from './HeaderLink.astro';
import { getRelativeLocaleUrl } from "astro:i18n";
---

<header>
	<nav>
		<div></div>
		<div class="internal-links">
			<HeaderLink href={getRelativeLocaleUrl('en', '')}>Home</HeaderLink>
			<HeaderLink href={getRelativeLocaleUrl('en', 'blog')}>Blog</HeaderLink>
			<HeaderLink href={getRelativeLocaleUrl('en', 'about')}>About</HeaderLink>
		</div>
		<div><HeaderLink href={getRelativeLocaleUrl('fr', '')}>Fran√ßais</HeaderLink></div>
	</nav>
</header>
<style>
	header {
		margin: 0;
		padding: 0 1em;
		background: white;
		box-shadow: 0 2px 8px rgba(var(--black), 5%);
	}
	h2 {
		margin: 0;
		font-size: 1em;
	}

	h2 a,
	h2 a.active {
		text-decoration: none;
	}
	nav {
		display: flex;
		align-items: center;
		justify-content: space-between;
	}
	nav a {
		padding: 1em 0.5em;
		color: var(--black);
		border-bottom: 4px solid transparent;
		text-decoration: none;
	}
	nav a.active {
		text-decoration: none;
		border-bottom-color: var(--accent);
	}
	.social-links,
	.social-links a {
		display: flex;
	}
	@media (max-width: 720px) {
		.social-links {
			display: none;
		}
	}
</style>
